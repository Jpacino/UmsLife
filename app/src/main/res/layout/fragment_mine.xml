<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30_dip"
                android:background="@color/red_main"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red_main">

                <de.hdodenhof.circleimageview.CircleImageView
                    app:civ_border_width="@dimen/dimen_1_dip"
                    app:civ_border_color="@color/white"
                    android:id="@+id/iv_club_logo"
                    android:layout_width="@dimen/dimen_58_dip"
                    android:layout_height="@dimen/dimen_58_dip"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dimen_15_dip"
                    android:layout_marginTop="@dimen/dimen_50_dip"
                    android:src="@drawable/img_mine_head" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/iv_club_logo"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mine_name"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_12_dip" />

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="李四"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_12_dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_3_dip">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mine_department"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_12_dip" />

                        <TextView
                            android:id="@+id/tv_user_dept"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="营销中心"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_12_dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_3_dip">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电话："
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_12_dip" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="10086"
                            android:textSize="@dimen/dimen_12_dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_3_dip">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="积分："
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_12_dip" />

                        <TextView
                            android:id="@+id/tv_integral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="55分"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_12_dip" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <com.ums.umslife.view.MyListView
                android:id="@+id/mlv_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:divider="@null"
                android:dividerHeight="0.5dp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>