<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_color"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_mine_to_login_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white" >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mine_login_portrait"
                    android:layout_width="@dimen/dimen_58_dip"
                    android:layout_height="@dimen/dimen_58_dip"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dimen_15_dip"
                    android:src="@drawable/mine_login_im" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/mine_login_portrait"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mine_name"
                            android:textSize="@dimen/dimen_12_dip" />

                        <TextView
                            android:id="@+id/user_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="李四"
                            android:textSize="@dimen/dimen_12_dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_3_dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mine_department"
                            android:textSize="@dimen/dimen_12_dip" />

                        <TextView
                            android:id="@+id/user_dept_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="营销中心"
                            android:textSize="@dimen/dimen_12_dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_3_dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电话："
                            android:textSize="@dimen/dimen_12_dip" />

                        <TextView
                            android:id="@+id/phone_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10086"
                            android:textSize="@dimen/dimen_12_dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_3_dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="积分："
                            android:textSize="@dimen/dimen_12_dip" />

                        <TextView
                            android:id="@+id/total_integral_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="55分"
                            android:textColor="@color/red_main"
                            android:textSize="@dimen/dimen_12_dip" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <com.ums.umslife.view.MyListView
                android:id="@+id/mlv_list_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:background="@android:color/white"
                android:divider="@color/gray_color"
                android:dividerHeight="0.5dp" >
            </com.ums.umslife.view.MyListView>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" >
    </FrameLayout>

</LinearLayout>