<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_5_dip" >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_member_logo"
        android:layout_width="@dimen/dimen_38_dip"
        android:layout_height="@dimen/dimen_38_dip"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dimen_10_dip"
        android:src="@drawable/img_mine_head" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_member_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_3_dip"
            android:textSize="12sp"
            android:textColor="@color/gray_txt" />
    </LinearLayout>

</LinearLayout>