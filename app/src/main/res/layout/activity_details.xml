<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/title_img_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_180_dip"
                android:scaleType="centerCrop"
                android:src="@drawable/activity_theme" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10_dip">

                <TextView
                    android:id="@+id/activity_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/ll_sign"
                    android:lines="1"
                    android:text="南京银商春季马拉松"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/club_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/activity_name_tv"
                    android:layout_toLeftOf="@+id/ll_sign"
                    android:lines="1"
                    android:text="俱乐部"
                    android:textColor="@color/gray_txt"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/ll_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_apply"
                        style="@style/tv_submit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:text="@string/to_participate"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_to_sign"
                        style="@style/tv_submit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/to_sign_in"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_to_upload"
                        style="@style/tv_submit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="上传"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="10dp"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_10_dip">

                <ImageView
                    android:layout_width="@dimen/dimen_12_dip"
                    android:layout_height="@dimen/dimen_12_dip"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10_dip"
                    android:text="活动开始时间"
                    android:textColor="@color/gray_txt"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/signStartTime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_5_dip"
                    android:lines="1"
                    android:text="2017-11-11 11:11"
                    android:textColor="@color/gray_txt"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="10dp"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_10_dip">

                <ImageView
                    android:layout_width="@dimen/dimen_12_dip"
                    android:layout_height="@dimen/dimen_12_dip"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/time2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10_dip"
                    android:text="活动结束时间"
                    android:textColor="@color/gray_txt"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/signEndTime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_5_dip"
                    android:lines="1"
                    android:text="2017-11-11 11:11"
                    android:textColor="@color/gray_txt"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="10dp"
                android:background="@color/line" />

            <LinearLayout
                android:id="@+id/address_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_10_dip">

                <ImageView
                    android:layout_width="@dimen/dimen_12_dip"
                    android:layout_height="@dimen/dimen_12_dip"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/address" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10_dip"
                    android:text="位置"
                    android:textColor="@color/gray_txt"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_5_dip"
                    android:text="资本大厦"
                    android:textColor="@color/gray_txt"
                    android:textSize="12sp" />
            </LinearLayout>
            <!--<RelativeLayout-->
            <!--android:id="@+id/details_more_rl"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/bg_press_selector"-->
