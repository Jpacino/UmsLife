<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10_dip" >

        <TextView
            android:id="@+id/tv_act_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/tv_joinState"
            android:lines="1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_club_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_act_name"
            android:layout_marginTop="@dimen/dimen_2_dip"
            android:layout_toLeftOf="@+id/tv_joinState"
            android:lines="1"
            android:textColor="@color/gray_txt"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_joinState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_act_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_3_dip"
            android:textColor="@color/red_txt"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_club_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_3_dip"
            android:textColor="@color/red_main" />
    </RelativeLayout>
</android.support.v7.widget.CardView>